<%= turbo_frame_tag 'home' do %>

    <div class="px-1">
        <%= form_with url: products_path, method: :get do |form| %>
        <%= form.text_field :query_text, placeholder: 'Â¿Que deseas buscar?', onChange: 'this.form.requestSubmit()', value: params[:query_text], class:"w-full my-2 rounded-2xl bg-white border-gray-300 xs:text-xs"%>
        <div class="flex">
            <%= form.number_field :min_price, placeholder: 'Costo Min', onChange: 'this.form.requestSubmit()', value: params[:min_price], class:"w-1/3 my-2 rounded-2xl bg-white border-gray-300 xs:text-xs" %>
            <%= form.number_field :max_price, placeholder: 'Costo Max', onChange: 'this.form.requestSubmit()', value: params[:max_price], class:"w-1/3 my-2 rounded-2xl mx-2 bg-white border-gray-300 xs:text-xs" %>

            <%= form.select :order_by, options_for_select([["Recientes", "newest"], ["Mas Caro", "expensive"], ["Mas Barato", "cheapest"]], params[:order_by]), {}, {onChange: 'this.form.requestSubmit()', class:"w-1/3 my-2 rounded-2xl text-gray-500 bg-white border-gray-300 xs:text-xs"}%>
        </div>
        <%end %>
    </div>
   
    <div class="flex overflow-x-scroll gap-2 m-2">
        <%= render(CategoryComponent.new()) %>
        <%= render(CategoryComponent.with_collection(@categorias)) %>
    </div>


    <div class="bg-white rounded-xl m-2 ">
        <%= turbo_frame_tag :products, class:"flex flex-col m-2" do %>
            <%= turbo_frame_tag "products-#{@pagy.page}", class: 'products flex flex-col w-full sm:flex-row sm:flex-wrap sm:gap-x-2 ' do %>
                <%= render partial: 'product', collection: @productos %>    
                <%=turbo_frame_tag "products-#{@pagy.next}", class: 'products flex flex-col w-full sm:flex-row sm:flex-wrap sm:gap-x-2', 
                    src: pagy_url_for(@pagy, @pagy.next), loading: :lazy if @pagy.next%>  
            <% end %>
        <% end %>
    </div>
<% end %>
