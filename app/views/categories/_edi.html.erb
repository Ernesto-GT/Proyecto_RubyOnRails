<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mx-2">
    <%= form.label :name,"Modificar Nombre", style: "display: block", class:"mx-2 text-white"%>
    <%= form.text_field :name, class:"w-full my-2 rounded-2xl text-gray-600 bg-white border-teal-700 text-xs sm:text-base", placeholder: 'Ej. Libros'  %>
  </div>
  <br>
  <div class="flex text-xs mx-1 sm:text-sm sm:mx-5">
    <button class="bg-cyan-100 border-2 border-cyan-400 text-teal-600 font-bold text-xs sm:text-sm rounded-2xl my-5 p-1">
      <%= form.submit %>
    </button>
    <button class="bg-cyan-100 border-2 border-cyan-400 text-teal-600 font-bold text-xs sm:text-sm rounded-2xl mx-1 sm:mx-4 my-5 px-4 py-1 flex">
      <%= link_to "Regresar", categories_path %>
    </button>
  </div>
<% end %>
