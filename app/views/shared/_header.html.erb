<div class="bg-teal-700 flex justify-between items-center px-2" data-controller="menu">
    <%= link_to products_path do %>    
        <h1 class="text-2xl font-bold text-white hover:text-teal-400">Sell-IT</h1>
    <% end %>
    <button class="sm:hidden imageIcons" data-action="click->menu#open"><%= image_tag 'icons/menu.svg', width: 25, height: 25 %></button>

    <!---Menu Tablet/Laptop--->
    <div class="hidden font-bold text-gray-100 sm:block">
        <%= render partial: 'shared/items' %>
    </div>
    <!---Menu Movil--->
    <div class="sm:hidden absolute bg-teal-800 top-0 right-0 shadow z-10 h-50 flex flex-col min-w-[35%] overflow-y-scroll ease-in-out duration-200 rounded-lg translate-x-full" data-menu-target="items">
        <div class="p-1">
            <button class="imageIcons" data-action="click->menu#close"><%= image_tag 'icons/close.svg', width: 25, height: 25 %></button>
        </div>
        <%= render partial: 'shared/items'%>
    </div>
</div>

